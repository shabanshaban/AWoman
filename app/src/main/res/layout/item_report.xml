<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:gravity="top"
    android:layout_height="50dp">


    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <TextView
        android:id="@+id/tv_price_report_recy"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="۶,۰۰۰,۰۰۰ تومان"
        android:textSize="14sp"
        android:textColor="@color/gray2"
        android:fontFamily="@font/iran"
        android:gravity="left|center_vertical"
        />
    <TextView
        android:id="@+id/tv_title_report_recy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="خرج‌های پرستاری"
        android:textSize="14sp"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:fontFamily="@font/iran"
        />

    <com.example.awoman.Utills.CircularTextView
        android:id="@+id/circleTextview"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="5dp"




       />

</LinearLayout>