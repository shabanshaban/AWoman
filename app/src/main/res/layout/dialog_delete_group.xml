<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layoutDirection="ltr"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حذف گروه"
                android:textSize="18sp"
                android:layout_marginTop="26dp"
                android:textColor="@color/red_color"
                android:fontFamily="@font/iran"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_delete"
                android:textSize="14sp"
                android:textColor="@color/gray2"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/iran"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_btn"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_stroke_editext_dialog"
            android:layout_height="56dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_dialog_addNewGroup_delte"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="منصرف شدم"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:fontFamily="@font/iran_m"
                />
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_dialog_addnewGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="حذفش کن"
                android:textColor="@color/red_color"
                android:textSize="12sp"
                android:fontFamily="@font/iran_m"
                />

        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>